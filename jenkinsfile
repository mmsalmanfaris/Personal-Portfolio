pipeline {
    agent any

    environment {
        FTP_HOST = '49.12.121.200'
        FTP_USER = 'digital6'
        FTP_PASS = 'YOUR_Cpanel_PASSWORD'
    }

    stages {
        stage('Build') {
            steps {
                sh 'npm install'
                sh 'npm run build'
            }
        }

        stage('Deploy') {
            steps {
                sh '''
                    lftp -u $FTP_USER,$FTP_PASS $FTP_HOST <<EOF
                    mirror -R dist /public_html
                    bye
EOF
                '''
            }
        }
    }
}
